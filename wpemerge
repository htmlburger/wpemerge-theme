<?php
if ( php_sapi_name() !== 'cli' ) {
	exit;
}

$vendors = [
	// $app/vendor
	__DIR__ . DIRECTORY_SEPARATOR . 'vendor',

	// $bedrock/vendor
	dirname( dirname( dirname( dirname( __DIR__ ) ) ) ) . DIRECTORY_SEPARATOR . 'vendor',
];

foreach ( $vendors as $vendor ) {
	$runner = $vendor . '/htmlburger/wpemerge-cli/src/run.php';

	if ( is_file( $runner ) ) {
		require_once $runner;
		break;
	}
}
