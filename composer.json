{
  "name": "htmlburger/wpemerge-theme",
  "version": "0.15.1",
  "description": "A modern WordPress starter theme which uses the WP Emerge framework",
  "type": "wordpress-theme",
  "keywords": ["wordpress", "theme", "starter theme", "wpemerge"],
  "license": "GPL-2.0-only",
  "homepage": "https://wpemerge.com/",
  "authors": [
    {
      "name": "Atanas Angelov",
      "email": "atanas.angelov.dev@gmail.com",
      "homepage": "https://github.com/atanas-angelov-dev/",
      "role": "Developer"
    },
    {
      "name": "htmlBurger",
      "email": "info@htmlburger.com",
      "homepage": "http://htmlburger.com/",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "git",
      "url": "https://github.com/htmlburger/wpemerge.git"
    },
    {
      "type": "git",
      "url": "https://github.com/htmlburger/wpemerge-theme-core.git"
    },
    {
      "type": "git",
      "url": "https://github.com/htmlburger/wpemerge-cli.git"
    }
  ],
  "require": {
    "php": ">=5.5",
    "composer/installers": "^1.4",
    "htmlburger/wpemerge": "dev-master as 0.15.1",
    "htmlburger/wpemerge-theme-core": "dev-master as 0.15.1",
    "htmlburger/carbon-pagination": "^1.1.6"
  },
  "require-dev": {
    "filp/whoops": "^2.2",
    "htmlburger/wpemerge-cli": "dev-master as 0.15.1",
    "symfony/debug": "~3.0",
    "wp-coding-standards/wpcs": "^2.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/src/"
    }
  },
  "scripts": {
    "install-test-env":[
      "WPEmerge\\Cli\\App::createConfigJson"
    ],
    "post-create-project-cmd": [
      "WPEmerge\\Cli\\App::createConfigJson",
      "WPEmerge\\Cli\\App::installDependencies",
      "WPEmerge\\Cli\\App::buildAssets",
      "WPEmerge\\Cli\\App::install"
    ]
  }
}
